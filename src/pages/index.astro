---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Mandyland - Home"
  description="For all things Mandy: fiverr, etsy, tech, and boredom"
>
  <link slot="head" rel="stylesheet" href="/static/css/index.css">

  <div class="carousel">
    <!-- row 1 -->
    <section class="carousel-page">
      <div class="box large" id="box1">
        <img id="hey-im-desktop" src="/static/imgs/hey-im.gif" alt="Hey I'm Mandy, Mandilocs, MandyCyber, Amanda R">
        <img id="hey-im-mobile" src="/static/imgs/hey-im-no-swipe.gif" alt="Hey I'm Mandy, Mandilocs, MandyCyber, Amanda R">
      </div>
    </section>

    <!-- row 2 -->
    <section class="carousel-page">
      <div class="box" id="box2"><img src="/static/imgs/self-portrait.png" alt="Self-Portrait"></div>
      <div class="box" id="box3"><img src="/static/imgs/here-for-what.png" alt="Anywho you could be here for many things"></div>
    </section>

    <!-- row 3 -->
    <section class="carousel-page">
      <div class="box small hvr-wobble-skew" id="box4">
        <a target="_blank" class="box-links" href="https://www.fiverr.com/mandilocs"><img src="/static/imgs/fiverr.png" alt="Fiverr"></a>
      </div>
      <div class="box small hvr-wobble-skew" id="box5">
        <a target="_blank" class="box-links" href="https://www.etsy.com/shop/MandiLocs"><img src="/static/imgs/etsy.png" alt="Etsy"></a>
      </div>
      <div class="box small hvr-wobble-skew" id="box6">
        <a class="box-links" href="/tech"><img src="/static/imgs/tech.png" alt="Tech"></a>
      </div>
      <div class="box small hvr-wobble-skew" id="box7">
        <a class="box-links" href="/boredom"><img src="/static/imgs/boredom.png" alt="Boredom"></a>
      </div>
    </section>

    <!-- row 4 -->
    <section class="carousel-page">
      <div class="box large" id="box8"><img src="/static/imgs/oh-yeah.png" alt="Click on one of the above boxes to check it out"></div>
    </section>

    <!-- row 5 -->
    <section class="carousel-page">
      <div class="box" id="box9"><img src="/static/imgs/have-fun.png" alt="Have Fun"></div>
      <div class="box" id="box10"><img src="/static/imgs/dancing.png" alt="Dancing and Music"></div>
    </section>
  </div>

  <script src="https://open.spotify.com/embed/iframe-api/v1" async></script>
  <script>
    import { scrollCarousel } from '../scripts/carousel';
    // Initialize if needed
  </script>
</BaseLayout>
